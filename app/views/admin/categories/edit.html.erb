<h3 class="form-title">编辑类目 <%= @category.name %></h3>

<%= form_for [:admin, @category] do |f| %>

<div class="form-group">
	<%= f.label :name, "名称" %>
	<%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
	<%= f.submit "添加", class: "btn btn-primary col-xs-2 pull-right" %>
</div>

<% end %>


