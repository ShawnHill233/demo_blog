<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
  	<%= form_for :session, url: admin_signin_path do |f| %>
	  	
	  	<div class="form-group">
	  		<%= f.label :username, "用户名", class: "col-xs-2 control-label" %>
	  		<div class="col-xs-10">
	  			<%= f.text_field :username, class: "form-control", placeholer: "Email或用户名" %>
	  		</div>
	  	</div>

	  	<div class="form-group">
	  		<%= f.label :password, "密码", class: "col-xs-2 control-label" %>
	  		<div class="col-xs-10">
	  			<%= f.password_field :password, class: "form-control", placeholer: "Email或用户名" %>
	  		</div>
	  	</div>

	  	<div class="form-group">
	  		<div class="col-xs-10 col-xs-offset-2">
	  			<%= f.submit "登录", class: "col-xs-3 btn btn-default" %>
	  		</div>
	  	</div>
  	<% end %>

  </div>
</div>