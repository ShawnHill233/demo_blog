<h3 class="form-title">编辑日志 <%= @article.title %></h3>

<%= form_for [:admin, @article], html: { role: "form", class: "center-block" } do |f| %>

   <div class="form-group">
    <%= f.label :title, "标题" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :text, "正文内容" %>
    <%= f.text_area :text, class: "form-control", rows: 15 %>
  </div>

  <div class="form-group">
    <%= f.submit "保存", class: "btn btn-primary col-xs-2 pull-right" %>
  </div>

<% end %>
