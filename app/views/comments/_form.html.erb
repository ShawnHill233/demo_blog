<div class="well">
<%= form_for [@article, @article.comments.build]  do |f| %>
	<p>
		<%= f.label :网名 %><br>
		<%= f.text_field :commenter, class: "form-control" %>
	</p>
	<p>
		<%= f.label :评论 %><br>
		<%= f.text_area :body, class: "form-control", rows:"3" %>
	</p>
	<p>
		<%= f.submit "发表评论", class: "btn btn-primary" %>
	</p>
<% end %>
</div>
