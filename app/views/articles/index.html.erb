 <h2>
 	近期文章
 </h2>
 <% @article.each do |article| %>

 <h2>
 	<a href="#"><%= article.title %></a>
 </h2>
 <p>
 	Category: 
 	<% article.categories.each do |category| %> 
 	<%= link_to category.name, '#' %>
 	<% end %>
 </p>
 <p><span class="glyphicon glyphicon-time"></span><%= article.created_at.strftime('%Y年%m月%d日') %></p>
	<!-- <hr>
	<img class="img-responsive" src="http://placehold.it/900x300" alt="">
	<hr> -->
	<p><%= markdown(article.text).html_safe %></p>
	<%= link_to 'Read More', article_path(article), class: "btn btn-primary" %><!-- <span class="glyphicon glyphicon-chevron-right"></span> -->
	<hr>
	<% end %>


